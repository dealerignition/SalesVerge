= form_for @charge, :url => { :action => "create", :controller => "charges" }, :html => { :class => "form-horizontal" } do |f|
  %fieldset
    .control-group
      = f.label :description, "Description", :class => "control-label"
      .controls
        = f.text_field :description, :id => "js-chargedescription"

    .control-group
      = f.label :price, { :class => "control-label" }
      .controls
        .input-prepend
          %span.add-on> $
          = f.text_field :price, :placeholder => "500.00", :type => :number,
            :step => "0.01", :id => "js-chargeprice"

    .control-group
      = f.label :quantity, { :class => "control-label" }
      .controls
        = f.text_field :quantity, :placeholder => "1", :type => :number,
          :min => 0

  .form-actions
    = f.submit("Add Charge", :class => "btn btn-primary btn-large")
    = f.hidden_field :date, :value => Time.now
    = f.hidden_field :quote_id, :value => @quote.id
    %input{ :type => :hidden, :name => :sample_id, :value => nil, :id => "js-chargesampleid" }
