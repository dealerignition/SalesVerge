= form_for(@appointment, :html => { :class => "form-horizontal" }) do |f|
  - if @appointment.errors.any?
    %div#errorExplanation
      %h2
        = pluralize(@appointment.errors.count, "error")
        prohibited this customer from being saved
      %ul
      - @appointment.errors.full_messages.each do |msg|
        %li
          = msg

  %fieldset
    %div.control-group
      = f.label :customer_id, "With whom is the appointment?", { :class => "control-label" }
      %div.controls
        %input{ :placeholder => "Customer Name", :id => "customername" }
        =f.hidden_field :customer_id, :value => -1, :id => :customerid
        %div.customers
  
    %div.control-group
      = f.label :date, { :class => "control-label" }
      %div.controls
        = f.text_field :date, { "type" => "date", "data-role" => "datebox", :value => Date.today, "data-options" => '{"useInline": true, "useInlineHideInput": true, "mode": "calbox"}' }
  
    %div.control-group
      = f.label :time, { :class => "control-label" }
      %div.controls
        = f.text_field :time, { :placeholder => "12:00 PM", "data-role" => "datebox", :readonly => "readonly", "data-options" => '{"focusMode": true, "mode": "timeflipbox", "timeFormatOverride": 12}' }
    
    %div.control-group
      = f.label :appointment_type, { :class => "control-label" }
      %div.controls
        = f.select :appointment_type, options_for_select(["Measurement", "Quote", "Other"])

    %div.form-actions
      = f.submit( :class => "btn btn-primary btn-large" )
      = link_to "Cancel", :back, { :class => "btn btn-large" }
      = f.hidden_field :status, :value => "Pending"
