%div.page-header
  %p
    = link_to :back, { :class => "btn btn-large" } do
      %i{ :class => "icon-arrow-left" }
      Back
  %h1
    = @customer.first_name
    = @customer.last_name
  
%div.row
  %div.span2
    - r = Random.new
    = image_tag "http://placekitten.com/120/#{r.rand(100..120)}", :class => "avatar"
    
  %div.span5
    %h6 Basic Info
    %table.table.table-striped
      %tr
        %td
          %b Name
        %td
          = @customer.first_name
          = @customer.last_name
      %tr
        %td
          %b Email
        %td
          %div.truncate-email
            = link_to @customer.email, "mailto:#{@customer.email}"
      %tr
        %td
          %b Phone
        %td
          = number_to_phone(@customer.phone)
          
    %a.btn{ "data-toggle" => "modal", :href => "#myModal" }
      View Extended Information
    
  %div.span5
    %h6 Location
    %table.table.table-striped
      %tr
        %td
          %b Address
        %td
          = @customer.address_1
      %tr
        %td
          %b City
        %td
          = @customer.city
      %tr
        %td
          %b State &amp; Zip
        %td
          = @customer.state
          = @customer.zip
    
       
%div.modal#myModal.fade{ :style => "display: none;"}
  %div.modal-header
    %a.close{  :href => "#", "data-dismiss" => "modal"}
      Ã—
    %h3 Extended Info
  %div.modal-body
    %table.table.table-striped
      %tr
        %td
          %b Age
        %td
          - if @rapleaf_info["age"]
            = @rapleaf_info["age"]
          - else
            %span.help-block N/A
      %tr
        %td
          %b Gender
        %td
          - if @rapleaf_info["gender"]
            = @rapleaf_info["gender"]
          - else
            %span.help-block N/A
      %tr
        %td
          %b Income
        %td
          - if @rapleaf_info["household_income"]
            = @rapleaf_info["household_income"]
          - else
            %span.help-block N/A
      %tr
        %td
          %b Married?
        %td
          - if @rapleaf_info["marital_status"]
            = @rapleaf_info["marital_status"]
          - else
            %span.help-block N/A
      %tr
        %td
          %b Home Owner?
        %td
          - if @rapleaf_info["home_owner_status"]
            = @rapleaf_info["home_owner_status"]
          - else
            %span.help-block N/A
      %tr
        %td 
          %b Home Market Value
        %td
          - if @rapleaf_info["home_market_value"]
            = @rapleaf_info["home_market_value"]
          - else
            %span.help-block N/A
            
          
          
  %div.modal-footer
    %a.btn{ :href => "#",  "data-dismiss" => "modal" }
      Close

%div.page-header
  %h2
    Quotes
    %small==(#{@customer.quotes.count})

- if @customer.quotes.present?
  %table{ :class => "table table-striped" }
    %thead
      %th Date Created
      %th Price
      %th
    - @customer.quotes.each do |quote|
      %tr
        %td= quote.created_at.to_s(:long)
        %td= number_to_currency(quote.charge_total)
        %td
          = link_to "View Quote", quote_path(quote), { :class => "btn" }
- else
  %p= link_to "Create a quote", new_quote_path, { :class => "btn" }
  
%div.page-header    
  %h2 Notes
%blockquote= @customer.notes

      
:javascript
  $('#myModal').modal('hide')









