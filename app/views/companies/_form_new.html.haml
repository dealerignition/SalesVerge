= form_for @company, :html => { :class => "form-horizontal" } do |f|
  = render "shared/error_messages", :target => @user
  .control-group
    = f.text_field :name, :placeholder => "Company name"
  .control-group
    = text_field :user, :first_name, :placeholder => "First name"
  .control-group
    = text_field :user, :last_name, :placeholder => "Last name"
  .control-group
    = text_field :user, :email, :placeholder => "Email address"
  .control-group
    = password_field :user, :password, :placeholder => "Password"
  .control-group
    = password_field :user, :password_confirmation, :placeholder => "Confirm password"
  .control-group
    = f.submit( "Create Account", :class => "btn btn-primary btn-large" )
