= form_for(@sample, :html => { :class => "form-horizontal" }) do |f|
  - if @sample.errors.any?
    %div#errorExplanation
      %h2
        = pluralize(@sample.errors.count, "error")
        prohibited this customer from being saved
      %ul
      - @sample.errors.full_messages.each do |msg|
        %li
          = msg
  
  %fieldset
    %div.control-group
      = f.label :dealer_sample_id, "Sample ID", { :class => "control-label" }
      %div.controls
        = f.text_field :dealer_sample_id, :placeholder => "12345"
    %div.control-group
      = f.label :name, { :class => "control-label" }
      %div.controls
        = f.text_field :name, :placeholder => "Allondra"

    %div.form-actions
      = f.submit(:class => "btn btn-primary btn-large")
      = link_to "Cancel", :back, { :class => "btn btn-large" }
