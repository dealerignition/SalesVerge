%div.modal.hide.fade#myModal
  %div.modal-header
    %a.close{ "data-dismiss" => "modal" }
      Ã—
    %h3 Create New Sample
  = form_for @sample, :url => { :action => "create", :controller => "samples" }, :html => { :class => "form-horizontal" } do |f|
    %div.modal-body
      = f.error_messages :header_message => "There were problems with the following fields:",
        :message => "",
        :header_tag => :h3
  
      %fieldset
        %div.control-group
          = f.label :dealer_sample_id, "Sample ID", { :class => "control-label" }
          %div.controls
            = f.text_field :dealer_sample_id, :placeholder => "12345"
        %div.control-group
          = f.label :name, { :class => "control-label" }
          %div.controls
            = f.text_field :name, :placeholder => "Allondra"
    
    %div.modal-footer
      %a.btn.btn-large{ "data-dismiss" => "modal" }
        Cancel
      = f.submit(:class => "btn btn-primary btn-large")

:javascript
  $('#myModal').modal('hide')