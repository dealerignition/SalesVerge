<div class="hr"></div>
<table border="0" cellspacing="0" cellpadding="0" width="100%">
  <tr>
    <% if @user.avatar_file_name? %>
      <td>
        <%= image_tag @user.avatar.url(:thumb), :class => "avatar" %>
      </td>
    <% end %>
    <td>
      <p><%= @user.message %></p>
      <span class="subtle">
        <%= @user.first_name %> <%= @user.last_name %><br />
    	  <%= mail_to @user.email %>
    	</span>
    </td>
  </tr>
</table>