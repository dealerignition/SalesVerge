-content_for :body do
  %div{ :class => "navbar navbar-fixed-top" }
    %div.navbar-inner
      %div.container
        %a{ :class => "btn btn-navbar", "data-toggle" => "collapse", "data-target" => ".nav-collapse" }
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %div.nav-collapse
          %ul.nav
            %li
              = link_to dashboard_path do
                %i{ :class => "icon-home icon-white" }
                Dashboard
            %li
              = link_to customers_path do
                %i{ :class => "icon-user icon-white" }
                Customers
            %li
              = link_to appointments_path do
                %i{ :class => "icon-calendar icon-white" }
                Appointments
            %li
              = link_to sample_checkouts_path do
                %i{ :class => "icon-th icon-white" }
                -if current_user
                  =current_user.dealer.sample_name.pluralize
                -else
                  Samples
            %li
              = link_to quotes_path do
                %i{ :class => "icon-shopping-cart icon-white" }
                Quotes
          %ul.nav.pull-right
            %li.divider-vertical
            - if current_user
              %li.dropdown
                = link_to "#", { :class => "dropdown-toggle", "data-toggle" => "dropdown" } do
                  ==#{current_user.first_name} #{current_user.last_name}
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "Account Settings", account_settings_account_path
                  %li= link_to "Sign out", logout_path
            - else
              %li= link_to "Sign in", login_path
  %div.container
    - if flash[:notice]
      %div.alert.alert-success
        %a.close{ :href => "#", "data-dismiss" => "alert" }
          &times;
        = flash[:notice]
    - if flash[:alert]
      %div.alert.alert-info
        %a.close{ :href => "#", "data-dismiss" => "alert" }
          &times;
        = flash[:alert]
    - if flash[:error]
      %div.alert.alert-error
        %a.close{ :href => "#", "data-dismiss" => "alert" }
          &times;
        = flash[:error]
    = yield

=render :template => "layouts/application"
