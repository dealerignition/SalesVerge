%div.page-header
  %h1 Account Settings

%div.row
  = render 'navigation'
    
  %div.span9
    %h3 Users
    %table.table.table-striped
      - @dealer.users.each do |user|
        %tr
          %td
            %span{ :class => !user.active? && "help-block" }
              = user.first_name
              = user.last_name
          %td
            %span{ :class => !user.active? && "help-block" }
              = user.email
          %td
            = form_for user do |f|
              - if user.active?
                = f.submit( "Deactivate", :class => "btn btn-danger", :confirm => "Are you sure you want to deactivate #{user.first_name}?")
                = f.hidden_field :active, :value => false
              - else
                = f.submit( "Reactivate", :class => "btn", :confirm => "Are you sure you want to reactivate #{user.first_name}?")
                = f.hidden_field :active, :value => true
    
    = link_to "#myModal", { "data-toggle" => "modal", :show => "false", :class => "btn btn-large btn-success" } do
      %i.icon-plus-sign.icon-white
      Create New User
= render 'users/admin_form'
