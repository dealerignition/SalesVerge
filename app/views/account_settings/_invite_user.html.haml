= form_for Invitation.new, :html => { :class => "form-horizontal" } do |f|
  %fieldset
    .control-group
      = f.label :recipient_email, "Friend's email address"
      .controls
        = f.text_field :recipient_email
    .control-group
      .controls
        = f.submit("Invite", :class => "btn btn-primary btn-large" )

        
        
        