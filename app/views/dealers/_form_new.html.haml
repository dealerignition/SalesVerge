= form_for @dealer, :html => { :class => "form-horizontal" } do |f|
  = render "shared/error_messages", :target => @user
  %fieldset
    %h3 Store info
    %div.control-group
      = f.label "Store name", { :class => "control-label" }
      %div.controls
        = f.text_field :name, :placeholder => "Your Store"
  %hr      
  %fieldset
    %h3 Personal info
    %div.control-group
      = label :user, :first_name, { :class => "control-label" }
      %div.controls
        = text_field :user, :first_name, :placeholder => "Joe"
    %div.control-group
      = label :user, :last_name, { :class => "control-label" }
      %div.controls
        = text_field :user, :last_name, :placeholder => "Smith"
    %div.control-group
      = label :user, :email, { :class => "control-label" }
      %div.controls
        = text_field :user, :email, :placeholder => "joe@mycarpet.com"
    %div.control-group
      = label :user, :password, { :class => "control-label" }
      %div.controls
        = password_field :user, :password
    %div.control-group
      = label :user, :password_confirmation, { :class => "control-label" }
      %div.controls
        = password_field :user, :password_confirmation
    %hr    
    %div.control-group
      %div.controls
        = f.submit( "Create Account", :class => "btn btn-primary btn-large" )
