- @dealer.users.build
= form_for @dealer, :html => { :class => "form-horizontal" } do |f|
  = f.error_messages :header_message => "There were problems with the following fields:",
    :message => "",
    :header_tag => :h3
  %fieldset
    %h3 Store info
    %div.control-group
      = f.label "Store name", { :class => "control-label" }
      %div.controls
        = f.text_field :name, :placeholder => "Your Carpet Store"
  %fieldset
    %h3 Personal info
    = f.fields_for :users do |builder|
      %div.control-group
        = builder.label :first_name, { :class => "control-label" }
        %div.controls
          = builder.text_field :first_name, :placeholder => "Joe"
      %div.control-group
        = builder.label :last_name, { :class => "control-label" }
        %div.controls
          = builder.text_field :last_name, :placeholder => "Smith"
      %div.control-group
        = builder.label :email, { :class => "control-label" }
        %div.controls
          = builder.text_field :email, :placeholder => "joe@mycarpet.com"
      %div.control-group
        = builder.label :password, { :class => "control-label" }
        %div.controls
          = builder.password_field :password
      %div.control-group
        = builder.label :password_confirmation, { :class => "control-label" }
        %div.controls
          = builder.password_field :password_confirmation
        
    %div.form-actions
      = f.submit( "Create Account", :class => "btn btn-primary btn-large" )