= form_for @dealer, :html => { :class => "form-horizontal" } do |f|
  = f.error_messages :header_message => "There were problems with the following fields:",
    :message => "",
    :header_tag => :h3
  %fieldset
    %div.control-group
      = f.label "Store name", { :class => "control-label" }
      %div.controls
        = f.text_field :name, :placeholder => "Your Carpet Store"
    %div.form-actions
      = f.submit( :class => "btn btn-primary btn-large" )