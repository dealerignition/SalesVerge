%tr
  %td
    %b
      %span{ :class => !user.active? && "help-block" }
        = user.first_name
        = user.last_name
    %br
    %span{ :class => !user.active? && "help-block" }
      = user.email
  %td
    = form_for user, :url => update_user_path(user) do |f|
      - if current_user == user
        = f.submit("This is you", :class => "btn disabled", :disabled => "disabled")
      - elsif user.active?
        = f.submit("Deactivate", :class => "btn btn-danger", :confirm => "Are you sure you want to deactivate #{user.first_name}?")
        = f.hidden_field :active, :value => false
      - else
        = f.submit("Reactivate", :class => "btn", :confirm => "Are you sure you want to reactivate #{user.first_name}?")
        = f.hidden_field :active, :value => true
