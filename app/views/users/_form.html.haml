= form_for @user, :url => create_user_path, :html => { :class => "form-horizontal" } do |f|
  = render "shared/error_messages", :target => @user
  %fieldset
    .control-group
      = f.label :first_name, { :class => "control-label" }
      .controls
        = f.text_field :first_name, :placeholder => "Joe"
    .control-group
      = f.label :last_name, { :class => "control-label" }
      .controls
        = f.text_field :last_name, :placeholder => "Smith"
    .control-group
      = f.label :email, { :class => "control-label" }
      .controls
        = f.text_field :email, :value => "#{ @invitation.recipient_email if @invitation }",
          :placeholder => "joe@email.com"
    .control-group
      = f.label :password, { :class => "control-label" }
      .controls
        = f.password_field :password
    .control-group
      = f.label :password_confirmation, { :class => "control-label" }
      .controls
        = f.password_field :password_confirmation
    .control-group
      .controls
        - if @invitation
          %input{ :type => :hidden, :name => :invitation_token,
            :value => @invitation.token }
        = f.submit(:class => "btn btn-primary btn-large" )
