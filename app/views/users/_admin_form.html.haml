%div.modal.hide.fade#myModal
  %div.modal-header
    %a.close{ "data-dismiss" => "modal" }
      Ã—
    %h3 Create new user
  = form_for @user, :url => { :action => "admin_create", :controller => "users" }, :html => { :class => "form-horizontal" } do |f|
    %div.modal-body
      = f.error_messages :header_message => "There were problems with the following fields:",
        :message => "",
        :header_tag => :h3
      %fieldset
        %div.control-group
          = f.label :first_name, { :class => "control-label" }
          %div.controls
            = f.text_field :first_name, :placeholder => "Joe"
        %div.control-group
          = f.label :last_name, { :class => "control-label" }
          %div.controls
            = f.text_field :last_name, :placeholder => "Smith"
        %div.control-group
          = f.label :email, { :class => "control-label" }
          %div.controls
            = f.text_field :email, :placeholder => "joe@mycarpet.com"
        %div.control-group
          = f.label :password, { :class => "control-label" }
          %div.controls
            = f.password_field :password
        %div.control-group
          = f.label :password_confirmation, { :class => "control-label" }
          %div.controls
            = f.password_field :password_confirmation    
    %div.modal-footer
      %a.btn.btn-large{ "data-dismiss" => "modal" }
        Cancel
      = f.submit( :class => "btn btn-primary btn-large" )
      = f.hidden_field :dealer_id, :value => current_user.dealer_id

:javascript
  $('#myModal').modal('hide')