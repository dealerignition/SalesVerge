%div.page-header
  %h1 Signup

= form_for @user do |f|
  %div.field
    = f.label :email
    = f.text_field :email, :placeholder => "joe@mycarpet.com"
  %div.field
    = f.label :password
    = f.password_field :password
  %div.field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  %div.form-actions
    = f.submit( :class => "btn btn-primary btn-large" )