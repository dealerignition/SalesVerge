%div.page-header
  %h1 Signup

= form_for @user do |f|
  = f.error_messages :header_message => "There were problems with the following fields:",
    :message => "",
    :header_tag => :h3
  %div.field
    = f.label :email
    = f.text_field :email, :placeholder => "joe@mycarpet.com"
  %div.field
    = f.label :password
    = f.password_field :password
  %div.field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  %div.form-actions
    = f.submit( :class => "btn btn-primary btn-large" )