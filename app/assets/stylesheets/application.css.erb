/************ APPLICATION ************/

.icon_home_opt {
  background: url(<%= asset_path "moble-home.png" %>);
  width: 20px;
  height: 18px;
}

.icon_user_opt {
  background: url(<%= asset_path "moble-user.png" %>);
  width: 19px;
  height: 17px;
}

.icon_gear_opt {
  background: url(<%= asset_path "moble-gear.png" %>);
  width: 18px;
  height: 18px;
}

@media screen and (-webkit-min-device-pixel-ratio: 2), screen and (max--moz-device-pixel-ratio: 2) {
  .icon_home_opt {
    display: inline-block;
    background: url( <%= asset_path "moble-home@2x.png" %> );
    background-size:20px 18px;
  }
  .icon_user_opt {
    display: inline-block;
    background: url( <%= asset_path "moble-user@2x.png" %> );
    background-size:19px 17px;
  }
  .icon_gear_opt {
    display: inline-block;
    background: url( <%= asset_path "moble-gear@2x.png" %> );
    background-size:18px 18px;
  }
}

.icon_home_opt, .icon_user_opt, .icon_gear_opt {
  display: inline-block;
  background-repeat: no-repeat;
  background-position: center center;
  padding:10px 0;
}

#logo {
  text-align: center;
}

#logo img {
  margin: 10px;
  border: 4px solid #ffffff;
}

.employee {
  float: left;
  margin-right: 20px;
  width: 47%;
}

.customer_top {
  overflow: auto;
}

.customer_top img {
  float: left;
}
.customer_top table {
  float: right;
  width: 80%;
}

img.avatar {
  width: 100px;
  height: 100px;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  border-radius: 10px;
}

img.avatar.small {
  width: 50px;
  height: 50px;
  float: left;
  margin-right: 10px;
}

.truncate-email {
	width: 180px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.truncate-long {
	width: 290px;
	height: 20px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.field_with_errors input {
  border: 3px solid #B94A48;
}

.center {
  text-align: center;
}

#load {
  text-align: center;
  position: fixed;
  z-index: 9999;
  left: 50%;
  top: 35%;
  margin-left: -73px;
}

#load h3 {
  color: #e6e6e6;
}

#developmentBanner, #developmentBannerphone {
  background: rgba(255, 0, 0, 0.65);
  color: white;
  float: left;
  padding: 5px;
  position: fixed;
  bottom: 0px;
  left: 100px;
  z-index: 1060;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
}

#developmentBannerphone {
  left: 20px;
  padding: 2px 5px;
}

* {
  -webkit-touch-callout: none;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}
